def while_func(limit, incr)
    i = 0
    numbers = []

    while i < limit
        puts "At the top is #{i}"
        numbers.push(i)

        i += incr
        puts "Numbers now: ", numbers
        puts "At the bottom i is #{i}"
    end

    puts "The numbers: "

    # Remember you can write this two other ways?
    numbers.each {|num| puts num}
end

while_func(8)
