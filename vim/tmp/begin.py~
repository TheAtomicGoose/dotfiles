import curses

stdscr = curses.initscr()  # Initializes the screen
curses.raw()  # Line buffering disabled
stdscr.keypad(1)
curses.noecho()  # Turns off automatic echoing of keys to screen
curses.cbreak()  # Reacts to keys immediately, rather than wating for <RET>
stdscr.keypad(1)  # Makes curses return things like curses.KEY_LEFT, rather
                  # than a gross escape sequence

stdscr.addstr("Type any character to see it in bold\n")
ch = stdscr.getch()

if ch == curses.KEY_F1:
    stdscr.addstr("F1 key pressed")
else:
    stdscr.addstr("The pressed key is ")
    #stdscr.attron(curses.A_BOLD)
    stdscr.addch(ch | curses.A_BOLD)
    #stdscr.attroff(curses.A_BOLD);

stdscr.refresh()
stdscr.getch()

# Setting terminal settings back to normal before terminating program
curses.nocbreak()
stdscr.keypad(0)
curses.echo()

curses.endwin()  # Terminates curses session
