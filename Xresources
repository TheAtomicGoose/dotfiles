! Creates an alert when a long-running action in the terminal finishes
URxvt.urgentOnBell:         true
! Makes URxvt the login shell
URxvt.loginShell:           true
! Sets the number of lines saved to reduce memory usage
URxvt.saveLines:            1000
! Creates an internal border in the terminal to increase usability
URxvt.internalBorder:       1
! Sets line spacking
URxvt.lineSpace:            0

!!! Fonts !!!
! Allows bold font
URxvt.allow_bold:           true
! Sets font and bold font
URxvt*font: xft:Andale Mono:pixelsize=14:antialias=true
URxvt*boldFont: xft:Andale Mono:bold:pixelsize=14:antialias=true
! Fix font spacing
URxvt*letterSpace: -1
 
! Scrollbar
URxvt.scrollStyle:          rxvt
! Gets rid of the scrollbar
URxvt.scrollBar:            false
 
!!! Perl extensions !!!
! Does some stuff
URxvt.perl-ext-common:  default,matcher
! Specifies the program to open links with
URxvt.url-launcher: /usr/bin/chromium
! Type of button for links
URxvt.matcher.button:   1
! Color of links in terminal
URxvt.colorUL: 		#4682B4
 
!!! Cursor !!!
! Makes cursor blink when true
URxvt.cursorBlink:          true
! Changes cursor from block to underline
URxvt.cursorUnderline:      true
! Blanks out the pointer while typing
URxvt.pointerBlank:         true
 
! Solarized color scheme for the X Window System
!
! http://ethanschoonover.com/solarized


